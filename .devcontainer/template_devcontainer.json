{
	"name": "Python3 GDAL",
	"image": "gdal-python:0.0.1",
	"customizations":{
		"vscode":{
			"extensions": [
				"ms-python.vscode-pylance",
				"jupyter-notebook.nbextensions",
				"jupyter-notebook.code-snippets",
				"jupyter-notebook.table-of-contents"
			]
		}
	},
	"mounts":[
		"source=/path/to/data/,target=/workspaces/<<project_name>>/data,type=bind,consistency=cached",
		"source=/path/to/config,target=/workspaces/<<project_name>>/config,type=bind,consistency=cached"
	]

}
